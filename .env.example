# Application
APP_PORT=8080
VITE_PORT=5173

# PHP Version (8.1, 8.2, 8.3, or 8.4)
# Default: 8.3
PHP_VERSION=8.3

# Ports for specific PHP version containers (used with profiles)
APP_PORT_81=8081
APP_PORT_82=8082
APP_PORT_84=8084

# Sail User Configuration (match your host user)
WWWUSER=1000
WWWGROUP=1000

# FinanzOnline Credentials
FON_TE_ID=your_teilnehmer_id
FON_TE_UID=your_teilnehmer_uid
FON_BEN_ID=your_benutzer_id
FON_BEN_PIN=your_benutzer_pin

# SOAP Configuration
FON_SOAP_TRACE=false
FON_SOAP_EXCEPTIONS=true
FON_SOAP_TIMEOUT=30
FON_SOAP_CACHE_WSDL=1

# Redis
FORWARD_REDIS_PORT=6379

# Xdebug
SAIL_XDEBUG_MODE=off
SAIL_XDEBUG_CONFIG=client_host=host.docker.internal
